{
  "name": "cygnus-md",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:1420 && cross-env VITE_DEV_SERVER_URL=http://localhost:1420 electron . --no-sandbox\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "electron ."
  },
  "dependencies": {
    "@chakra-ui/react": "^3.30.0",
    "@emotion/react": "^11.14.0",
    "electron-squirrel-startup": "^1.0.1",
    "katex": "^0.16.27",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.cygnus.md",
    "productName": "Cygnus MD",
    "icon": "build/icon.png",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*.cjs",
      "!node_modules/**/*",
      "node_modules/electron-squirrel-startup/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    }
  }
}
