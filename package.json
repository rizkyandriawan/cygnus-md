{
  "name": "cygnus-md",
  "private": true,
  "version": "0.2.0",
  "description": "A lightweight, paginated Markdown reader for desktop",
  "author": {
    "name": "Rizky",
    "email": "rizky.andriawan@gmail.com"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:1420 && cross-env VITE_DEV_SERVER_URL=http://localhost:1420 electron . --no-sandbox\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "electron .",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.30.0",
    "@emotion/react": "^11.14.0",
    "@rizkyandriawan/foliojs": "^0.1.0",
    "@sentry/electron": "^7.5.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "katex": "^0.16.27",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "@types/marked": "^5.0.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.cygnus.md",
    "productName": "Cygnus MD",
    "icon": "build/icon.png",
    "artifactName": "cygnus-md-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*.cjs",
      "electron/**/*.html",
      "build/icon.png",
      "!node_modules/**/*",
      "node_modules/electron-squirrel-startup/**/*"
    ],
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "msi",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "build/icon.icns"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    },
    "publish": {
      "provider": "github",
      "owner": "rizkyandriawan",
      "repo": "cygnus-md"
    },
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "mimeType": "text/markdown",
        "role": "Viewer"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "mimeType": "text/markdown",
        "role": "Viewer"
      },
      {
        "ext": "txt",
        "name": "Text Document",
        "description": "Text Document",
        "mimeType": "text/plain",
        "role": "Viewer"
      }
    ]
  }
}
